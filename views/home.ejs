<%- include('partials/header') -%>

<h1>Home</h1>

<p><%= description %></p>

<% allTheBlogs.forEach((blog) => { %>

<h2><%= blog.title %></h2>

<%if (blog.post.length < 100) { %>
<p><%= blog.post %></p>

<%} else { %>
<p><%= blog.post.substring(0,100) %>...
  <a href="/posts/<%= blog.title %>"> Read More</a>
</p>
<%  }}); %>


<%- include('partials/footer') -%>